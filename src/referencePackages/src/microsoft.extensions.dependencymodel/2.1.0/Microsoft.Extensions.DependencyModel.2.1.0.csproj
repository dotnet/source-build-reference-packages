<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), dir.props))/dir.props" />
  <PropertyGroup>
    <TargetFrameworks>netstandard1.3;netstandard1.6;net451</TargetFrameworks>
    <NuspecFile>$(ArtifactsBinDir)microsoft.extensions.dependencymodel/2.1.0/microsoft.extensions.dependencymodel.nuspec</NuspecFile>
    <StrongNameKeyId>MicrosoftAspNetCore</StrongNameKeyId>
   </PropertyGroup>

  <PropertyGroup>
    <OutputPath>$(ArtifactsBinDir)microsoft.extensions.dependencymodel/2.1.0/ref/</OutputPath>
    <IntermediateOutputPath>$(ArtifactsObjDir)microsoft.extensions.dependencymodel/2.1.0</IntermediateOutputPath>
  </PropertyGroup>
    <PropertyGroup Condition=" '$(TargetFramework)' == 'netstandard1.3' ">
        <OutputPath>$(ArtifactsBinDir)microsoft.extensions.dependencymodel/2.1.0/lib/</OutputPath>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(TargetFramework)' == 'netstandard1.6' ">
        <OutputPath>$(ArtifactsBinDir)microsoft.extensions.dependencymodel/2.1.0/lib/</OutputPath>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(TargetFramework)' == 'net451' ">
        <OutputPath>$(ArtifactsBinDir)microsoft.extensions.dependencymodel/2.1.0/lib/</OutputPath>
    </PropertyGroup>

  <ItemGroup>
    <Compile Include="**/ref/$(TargetFramework)/*.cs" />
    <Compile Include="**/lib/$(TargetFramework)/*.cs" />
  </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard1.3' ">
        <PackageReference Include="Microsoft.DotNet.PlatformAbstractions" Version="2.1.0" />
        <PackageReference Include="Newtonsoft.Json" Version="9.0.1" />
        <PackageReference Include="System.Diagnostics.Debug" Version="4.0.11" />
        <PackageReference Include="System.Dynamic.Runtime" Version="4.0.11" />
        <PackageReference Include="System.Linq" Version="4.1.0" />
    </ItemGroup>
    <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard1.6' ">
        <PackageReference Include="Microsoft.DotNet.PlatformAbstractions" Version="2.1.0" />
        <PackageReference Include="Newtonsoft.Json" Version="9.0.1" />
        <PackageReference Include="System.Diagnostics.Debug" Version="4.0.11" />
        <PackageReference Include="System.Dynamic.Runtime" Version="4.0.11" />
        <PackageReference Include="System.Linq" Version="4.1.0" />
    </ItemGroup>
    <ItemGroup Condition=" '$(TargetFramework)' == 'net451' ">
        <PackageReference Include="Microsoft.DotNet.PlatformAbstractions" Version="2.1.0" />
        <PackageReference Include="Newtonsoft.Json" Version="9.0.1" />
        <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies.net451" Version="1.0.0-alpha-5" />
        <Reference Include="System" />
        <Reference Include="System.Core" />
    </ItemGroup>

  
</Project>
