<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net472</TargetFrameworks>
    <NuspecFile>$(ArtifactsBinDir)microsoft.io.redist/6.0.0/microsoft.io.redist.nuspec</NuspecFile>
    <StrongNameKeyId>Open</StrongNameKeyId>
  </PropertyGroup>

  <PropertyGroup>
    <OutputPath>$(ArtifactsBinDir)microsoft.io.redist/6.0.0/ref/</OutputPath>
    <IntermediateOutputPath>$(ArtifactsObjDir)microsoft.io.redist/6.0.0</IntermediateOutputPath>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'net472' ">
    <OutputPath>$(ArtifactsBinDir)microsoft.io.redist/6.0.0/lib/</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="**/ref/$(TargetFramework)/*.cs" />
    <Compile Include="**/lib/$(TargetFramework)/*.cs" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net472' ">
    <PackageReference Include="System.Buffers" Version="4.5.1" />
    <PackageReference Include="System.Memory" Version="4.5.4" />
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies.net472" Version="1.0.2" />
  </ItemGroup>

</Project>
